extends head

block content
    h1 Sign up to MineTime

    form(class="pure-form pure-form-stacked" method="post")
        legend I welcome you to MineTime

        label(for="firstName") First Name
        input(type="text" id="firstName" name="firstName" value=person.firstName class="pure-input-rounded")

        label(for="lastName") Last Name
        input(type="text" id="lastName" name="lastName" value=person.lastName class="pure-input-rounded")

        label(for="email") Email
        input(type="text" id="email" name="email" value=person.email class="pure-input-rounded")

        label(for="password") Password
        input(type="password" id="password" name="password" value=person.password class="pure-input-rounded")

        button.pure-button Submit

    if errors
        each error in errors
            p error #{error.defaultMessage}
