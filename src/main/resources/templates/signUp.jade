extends head

block content
    h1 Sign up to MineTime
        form(class="pure-form pure-form-stacked" method="post")
            legend I welcome you to MineTime

            label(for="firstName") First Name
            input(type="text" id="firstName" name="firstName" value=user.firstName class="pure-input-rounded")

            label(for="lastName") Last Name
            input(type="text" id="lastName" name="password" value=user.password class="pure-input-rounded")

            label(for="email") Email
            input(type="text" id="email" name="username" value=user.email class="pure-input-rounded")

            label(for="password") Password
            input(type="password" id="password" name="password" value=user.password class="pure-input-rounded")

            button.pure-button Submit